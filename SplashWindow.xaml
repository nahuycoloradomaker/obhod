<Window x:Class="obhod.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashWindow" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Border CornerRadius="20" Background="#0A0A0A" BorderBrush="#FF5E00" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#FF5E00" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <!-- Neon Background Glow -->
                <Ellipse Fill="#FF5E00" Opacity="0.05" Margin="-50">
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                </Ellipse>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="OBHOD" FontSize="48" FontWeight="Black" Foreground="White" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF5E00" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <TextBlock Text="PREMIUM BYPASS ENGINE" FontSize="12" Foreground="#888" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    
                    <Grid Width="200" Height="2" Background="#222" Margin="0,30,0,0">
                        <Rectangle x:Name="ProgressBar" Width="0" HorizontalAlignment="Left" Fill="#FF5E00">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#FF5E00" BlurRadius="10" ShadowDepth="0"/>
                            </Rectangle.Effect>
                        </Rectangle>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ProgressBar" Storyboard.TargetProperty="Width"
                                   From="0" To="200" Duration="0:0:2.5">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseInOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
