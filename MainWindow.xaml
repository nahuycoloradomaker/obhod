                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="Track" Width="56" Height="30"
                                            CornerRadius="15" BorderThickness="1.5">
                                        <Border.Background>
                                            <SolidColorBrush x:Name="TrackBg" Color="#16162A"/>
                                        </Border.Background>
                                        <Border.BorderBrush>
                                            <SolidColorBrush x:Name="TrackBorder" Color="#252545"/>
                                        </Border.BorderBrush>
                                        <Canvas>
                                            <Ellipse x:Name="Knob" Width="22" Height="22"
                                                     Canvas.Top="3" Canvas.Left="3">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush x:Name="KnobColor" Color="#383858"/>
                                                </Ellipse.Fill>
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                      Color="#000" Opacity="0.6"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Canvas>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBg"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#2845CC" Duration="0:0:0.3">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#5C7CFF" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="KnobColor"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#FFFFFF" Duration="0:0:0.25"/>
                                                        <DoubleAnimation Storyboard.TargetName="Knob"
                                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                                         To="30" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBg"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#16162A" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#252545" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="KnobColor"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#383858" Duration="0:0:0.25"/>
                                                        <DoubleAnimation Storyboard.TargetName="Knob"
                                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                                         To="3" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder" Storyboard.TargetProperty="Color" To="#404068" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder" Storyboard.TargetProperty="Color" To="#252545" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>
                </Border>


                <Border Grid.Row="1" CornerRadius="16" Margin="0,0,0,10"
                        Background="#0AFFFFFF" BorderBrush="#12FFFFFF" BorderThickness="1"
                        Padding="18,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="ÐžÐ±Ñ…Ð¾Ð´ Ð±Ð»Ð¾ÐºÐ¸Ñ€Ð¾Ð²Ð¾Ðº" Foreground="#E8E8F0"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="14" FontWeight="SemiBold"/>
