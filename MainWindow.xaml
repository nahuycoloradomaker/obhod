                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtStatus" Text="ÐžÑ‚ÐºÐ»ÑŽÑ‡Ñ‘Ð½"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="15" FontWeight="SemiBold">
                                <TextBlock.Foreground>
                                    <SolidColorBrush x:Name="StatusTextColor" Color="#60FFFFFF"/>
