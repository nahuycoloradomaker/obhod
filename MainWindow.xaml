<Window x:Class="obhod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="obhod" Icon="pack://application:,,,/Resources/icon.ico"
        Height="640" Width="440"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#0CFFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#14FFFFFF"/>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <ThicknessAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Margin" From="18,40,18,0" To="18,18,18,18" Duration="0:0:0.7">
                        <ThicknessAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </ThicknessAnimation.EasingFunction>
                    </ThicknessAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="Transparent">
        <Border x:Name="MainBorder" CornerRadius="20" BorderThickness="1"
                Margin="18">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0D0D12" Offset="0"/>
                    <GradientStop Color="#0A0A10" Offset="0.5"/>
                    <GradientStop Color="#0E0C14" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#22FFFFFF" Offset="0"/>
                    <GradientStop Color="#0AFFFFFF" Offset="0.5"/>
                    <GradientStop Color="#18FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.9"/>
            </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" CornerRadius="20,20,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#10FFFFFF" Offset="0"/>
                        <GradientStop Color="#08FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="16,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Resources/icon.ico" Width="18" Height="18" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="obhod" Foreground="#E0E0F0" FontWeight="Bold"
                                   FontSize="14" FontFamily="Segoe UI Variable,Segoe UI"
                                   VerticalAlignment="Center"/>
                        <Border CornerRadius="4" Background="#10FFFFFF" Padding="5,1" Margin="8,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="v1.0" Foreground="#40FFFFFF"
                                       FontSize="10" FontFamily="Segoe UI Variable,Segoe UI"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="вЂ”" Click="Btn_Min" Width="30" Height="30"
                                Foreground="#555" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="b" Background="#00FFFFFF" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Background.Color" To="#18FFFFFF" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Background.Color" To="#00FFFFFF" Duration="0:0:0.25"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#50FFFFFF"/>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="вњ•" Click="Btn_Close" Width="30" Height="30"
                                BorderThickness="0" Cursor="Hand" FontSize="12">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="#50FFFFFF"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="b" Background="#00FF4444" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Background.Color" To="#30FF4444" Duration="0:0:0.15"/>
                                                                    <ColorAnimation Storyboard.TargetProperty="Foreground.Color" To="#FF6060" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Background.Color" To="#00FF4444" Duration="0:0:0.25"/>
                                                                    <ColorAnimation Storyboard.TargetProperty="Foreground.Color" To="#50FFFFFF" Duration="0:0:0.25"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="16,8,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Border Grid.Row="0" CornerRadius="14" Margin="0,0,0,10"
                        Padding="16,14">
                    <Border.Background>
                        <SolidColorBrush x:Name="StatusBg" Color="#0CFFFFFF"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush x:Name="StatusBorder" Color="#16FFFFFF"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Width="14" Margin="0,0,14,0"
                              VerticalAlignment="Center">
                            <Ellipse Width="10" Height="10">
                                <Ellipse.Fill>
                                    <SolidColorBrush x:Name="DotColor" Color="#252535"/>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect x:Name="DotGlow" Color="#252535"
                                                      BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtStatus" Text="РћС‚РєР»СЋС‡С‘РЅ"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="14" FontWeight="SemiBold">
                                <TextBlock.Foreground>
                                    <SolidColorBrush x:Name="StatusTextColor" Color="#60FFFFFF"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock x:Name="TxtSub" FontFamily="Segoe UI Variable,Segoe UI" FontSize="11"
                                       Foreground="#30FFFFFF" Margin="0,2,0,0"
                                       Text="РќР°Р¶РјРёС‚Рµ РїРµСЂРµРєР»СЋС‡Р°С‚РµР»СЊ"/>
                        </StackPanel>

                        <Border Grid.Column="2" CornerRadius="6" Background="#08FFFFFF" Padding="8,3" VerticalAlignment="Center">
                            <TextBlock Text="obhod" VerticalAlignment="Center"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="10" Foreground="#20FFFFFF"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </Border>


                <Border Grid.Row="1" CornerRadius="14" Margin="0,0,0,10"
                        Background="#0CFFFFFF" BorderBrush="#14FFFFFF" BorderThickness="1"
                        Padding="16,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="РћР±С…РѕРґ Р±Р»РѕРєРёСЂРѕРІРѕРє" Foreground="#E8E8F0"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtPresetList" Foreground="#35FFFFFF"
                                       FontFamily="Segoe UI Variable,Segoe UI" FontSize="11" Margin="0,3,0,0"
                                       Text="Discord В· YouTube В· Roblox В· HTTPS"/>
                        </StackPanel>

                        <ToggleButton x:Name="MainToggle" Grid.Column="1"
                                      VerticalAlignment="Center" Cursor="Hand"
                                      Click="Toggle_Click">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="Track" Width="52" Height="28"
                                            CornerRadius="14" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush x:Name="TrackBg" Color="#18182A"/>
                                        </Border.Background>
                                        <Border.BorderBrush>
                                            <SolidColorBrush x:Name="TrackBorder" Color="#252540"/>
                                        </Border.BorderBrush>
                                        <Canvas>
                                            <Ellipse x:Name="Knob" Width="20" Height="20"
                                                     Canvas.Top="3" Canvas.Left="3">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush x:Name="KnobColor" Color="#404060"/>
                                                </Ellipse.Fill>
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6"
                                                                      Color="#000" Opacity="0.5"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Canvas>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBg"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#3B52CC" Duration="0:0:0.25">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#5C7CFF" Duration="0:0:0.25"/>
                                                        <ColorAnimation Storyboard.TargetName="KnobColor"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#FFFFFF" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="Knob"
                                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                                         To="29" Duration="0:0:0.25">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBg"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#18182A" Duration="0:0:0.25"/>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#252540" Duration="0:0:0.25"/>
                                                        <ColorAnimation Storyboard.TargetName="KnobColor"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="#404060" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="Knob"
                                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                                         To="3" Duration="0:0:0.25">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder" Storyboard.TargetProperty="Color" To="#404060" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="TrackBorder" Storyboard.TargetProperty="Color" To="#252540" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>
                </Border>


                <Border Grid.Row="2" CornerRadius="14" Margin="0,0,0,10"
                        Background="#0CFFFFFF" BorderBrush="#14FFFFFF" BorderThickness="1"
                        Padding="14,12">
                    <StackPanel>
                        <TextBlock Text="РЎР•Р Р’РРЎР«" Foreground="#25FFFFFF"
                                   FontFamily="Segoe UI Variable,Segoe UI" FontSize="10" FontWeight="Bold"
                                   Margin="2,0,0,10"/>
                        <WrapPanel>

                            <ToggleButton x:Name="P_Discord" IsChecked="True"
                                          Tag="discord" Click="Preset_Click"
                                          Margin="0,0,6,6">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="bd" CornerRadius="10" Padding="12,7"
                                                Cursor="Hand" BorderThickness="1"
                                                Background="#10FFFFFF" BorderBrush="#18FFFFFF">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="pack://application:,,,/Resources/discord.png" Width="16" Height="16" Margin="0,0,7,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock x:Name="txt" Text="Discord" FontFamily="Segoe UI Variable,Segoe UI"
                                                           FontSize="12" Foreground="#50FFFFFF" FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#1A2560" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#3A50CC" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#8899FF" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#10FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#18FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#50FFFFFF" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ToggleButton x:Name="P_YouTube" IsChecked="True"
                                          Tag="youtube" Click="Preset_Click"
                                          Margin="0,0,6,6">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="bd" CornerRadius="10" Padding="12,7"
                                                Cursor="Hand" BorderThickness="1"
                                                Background="#10FFFFFF" BorderBrush="#18FFFFFF">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="pack://application:,,,/Resources/youtube.png" Width="16" Height="16" Margin="0,0,7,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock x:Name="txt" Text="YouTube" FontFamily="Segoe UI Variable,Segoe UI"
                                                           FontSize="12" Foreground="#50FFFFFF" FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#261215" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#882525" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#FF6060" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#10FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#18FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#50FFFFFF" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="0.75" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ToggleButton x:Name="P_Roblox" IsChecked="True"
                                          Tag="roblox" Click="Preset_Click"
                                          Margin="0,0,6,6">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="bd" CornerRadius="10" Padding="12,7"
                                                Cursor="Hand" BorderThickness="1"
                                                Background="#10FFFFFF" BorderBrush="#18FFFFFF">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="pack://application:,,,/Resources/roblox.png" Width="16" Height="16" Margin="0,0,7,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock x:Name="txt" Text="Roblox" FontFamily="Segoe UI Variable,Segoe UI"
                                                           FontSize="12" Foreground="#50FFFFFF" FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#101A26" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#255A88" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#48AFFF" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#10FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#18FFFFFF" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#50FFFFFF" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="0.75" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ToggleButton x:Name="P_HTTPS" IsChecked="True"
                                          Tag="https" Click="Preset_Click"
                                          Margin="0,0,6,6">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="bd" CornerRadius="10" Padding="12,7"
                                                Cursor="Hand" BorderThickness="1"
                                                Background="#10FFFFFF" BorderBrush="#18FFFFFF">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="pack://application:,,,/Resources/https.png" Width="16" Height="16" Margin="0,0,7,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock x:Name="txt" Text="HTTPS" FontFamily="Segoe UI Variable,Segoe UI"
                                                           FontSize="12" Foreground="#50FFFFFF" FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#102018" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="BorderBrush.Color" To="#228850" Duration="0:0:0.25"/>
                                                            <ColorAnimation Storyboard.TargetName="txt" Storyboard.TargetProperty="Foreground.Color" To="#48CC80" Duration="0:0:0.25"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="bd" Storyboard.TargetProperty="Background.Color" To="#10FFFFFF" Duration="0:0:0.25"/>
