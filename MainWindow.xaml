                            </TextBlock>
                            <TextBlock x:Name="TxtSub" FontFamily="Segoe UI Variable,Segoe UI" FontSize="11"
                                       Foreground="#30FFFFFF" Margin="0,3,0,0"
                                       Text="ÐÐ°Ð¶Ð¼Ð¸Ñ‚Ðµ Ð¿ÐµÑ€ÐµÐºÐ»ÑŽÑ‡Ð°Ñ‚ÐµÐ»ÑŒ"/>
